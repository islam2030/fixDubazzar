@model Nop.Core.Domain.Buckets.Bucket

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bucket</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Title")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BucketTitle)
        </dd>
        <dt>
            @Html.DisplayName("Create Date")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt>
            @Html.DisplayName("End Date")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt>
            @Html.DisplayName("Total Amount")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BucketAmount)
        </dd>
        <dt>
            @Html.DisplayName("Status")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status.status)
        </dd>
        <dt>
            @Html.DisplayName("Bucket Type")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BucketType.Type)
        </dd>
        <dt>
            @Html.DisplayName("Description")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BucketDesc)
        </dd>
  
    </dl>
    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayName("Item Name")
                </th>

                <th>
                    @Html.DisplayName("Price")
                </th>
                <th>
                    @Html.DisplayName("Quantity")
                </th>
                <th>
                    @Html.DisplayName("Total Price")
                </th>
                <th>
                    @Html.DisplayName("Add Date")
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BucketItems)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)

                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddDate)
                    </td>
                  


                </tr>
            }
        </tbody>
    </table>
    <a href="/gift/send/@Model.BucketCode"> <button> Send Gift</button></a>
   
</div>

