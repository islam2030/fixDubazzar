                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-12">
                        <div class="widget bg-light">
                            <h5 class="mb-4">@Html.DisplayFor(model => model.BucketTitle)</h5>
                            <ul class="list-unstyled blog-category m-0">
                                <li>
                                    @Html.DisplayName("Create Date")
                                    <span class="float-left">@Html.DisplayFor(model => model.CreateDate)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("End Date")
                                    <span class="float-left">@Html.DisplayFor(model => model.DueDate)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("Total Amount")
                                    <span class="float-left">EGP  @Html.DisplayFor(model => model.BucketAmount)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("Status")
                                    <span class="float-left">@Html.DisplayFor(model => model.Status.status)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("Bucket Type")
                                    <span class="float-left">@Html.DisplayFor(model => model.BucketType.Type)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("Description")
                                    <span class="float-left">@Html.DisplayFor(model => model.BucketDesc)</span>
                                </li>
                                <li>
                                    @Html.DisplayName("Published")
                                    <span class="float-left"> @Html.DisplayFor(model => model.IsActive)</span>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <div class="col-lg-8 col-md-12">
                        <div class="at-share-btn-elements">
                            <ul>
                                <li class="facebook">
                                    <a href="#">
                                        Facebook
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li class="messenger">
                                    <a href="#">
                                        Messenger
                                        <i class="fa fa-comment-o"></i>
                                    </a>
                                </li>
                                <li class="WhatsApp">
                                    <a href="#">
                                        WhatsApp
                                        <i class="fa fa-whatsapp"></i>
                                    </a>
                                </li>
                                <li class="twitter">
                                    <a href="#">
                                        Twitter
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li class="gmail">
                                    <a href="#">
                                        Gmail
                                        <i class="fa fa-envelope"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <table class="table table-responsive-md table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        @Html.DisplayName("Item Name")
                                    </th>

                                    <th>
                                        @Html.DisplayName("Price")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Quantity")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Total Price")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Add Date")
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.BucketItems)
                                {
                                    <tr>
                                        <td>
                                            <img class="product_img" src="~/images/wedding.jpg" />
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Name)

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddDate)
                                        </td>
                                        @*<td>*@
                                            @*<a href="#" class="delete" data-toggle="modal" data-target="#delete"><i class="fa fa-trash-o icons" title="delete"></i></a>*@
                                            @*@Html.ActionLink("Delete One", "DeleteItem", new { id = item.Id, delType = 1 })
                                        @Html.ActionLink("Delete All", "DeleteItem", new { id = item.Id, delType = 2 })*@
                                        @*</td>*@


                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pay text-center">
                            <a href="#" class="btn btn_primary"> Pay </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget bg-light">
                <h3 class="mb-4 title_widget gradient-text1 text-center"> See Who Pay In Bucket </h3>
                <ul class="list-unstyled blog-category m-0">
                    <li>
                        <div class="media">
                            <img class="ml-2 img_user" src="~/images/wedding.jpg" alt="" />
                            <div class="media-body">
